@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete category</h2>
            <hr />
        </div>
        <div class="mb-2">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-2">
            <label asp-for="DisplayOrder">DisplayOrder</label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <input hidden asp-for="ID"/>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete category</button>
        <a class="btn btn-secondary" asp-controller="Category" asp-action="Delete" style="width:150px">Back to list</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}